%header
  .header__center
    .header__center__up
      = link_to image_tag("logo/logo.png", height: "50px", width: "175px", class: "header__center__up__mercari_logo"), root_path
      %form.header__center__up__search{action: ""}
        %input.header__center__up__search__keyword{type: "search", placeholder: "何かお探しですか？"}
        = button_tag type: "submit", class: "header__center__up__search__btn" do
          %svg{width:"16" ,height:"16" ,viewBox: "0 0 16 16" ,class: "header__center__up__search__btn__icon"}
            %path{fill: "currentColor" ,d: "M11.435 10.063h-.723l-.256-.247a5.92 5.92 0 0 0 1.437-3.87 5.946 5.946 0 1 0-5.947 5.947 5.92 5.92 0 0 0 3.87-1.437l.247.256v.723L14.637 16 16 14.637l-4.565-4.574zm-5.489 0A4.111 4.111 0 0 1 1.83 5.946 4.111 4.111 0 0 1 5.946 1.83a4.111 4.111 0 0 1 4.117 4.116 4.111 4.111 0 0 1-4.117 4.117z"}
    .header__center__down
      .header__center__down__menu
        .header__center__down__menu__category
          %svg{width: "20" ,height: "44" ,viewBox: "0 0 20 16" ,class: "header__center__down__menu__category__icon"}
            %path{fill: "currentColor" , d: "M18.799 15.25h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zM2 16a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"}
          = link_to categories_path id:"header-category-link" do
            = "カテゴリーから探す"
            = render partial:"layouts/categories"
        .header__center__down__menu__brand
          %svg{width: "23", height: "44" ,viewBox: "0 0 23 16" ,class: "header__center__down__menu__brand__icon"}
            %path{fill: "currentColor" ,d: "M6.315 0L4.473 1.806 2.833.019.73 1.977l1.69 1.84L1.198 5.02c-1.594 1.594-1.594 4.188-.01 5.772L6.3 16h13.272a3.08 3.08 0 0 0 3.077-3.077V3.076A3.08 3.08 0 0 0 19.57 0H6.315zm13.46 12.925a.211.211 0 0 1-.205.205H7.504L3.227 8.771a1.226 1.226 0 0 1-.01-1.71L4.38 5.92l1.28 1.371a2.68 2.68 0 1 0 2.13-1.93L6.433 3.907 7.49 2.87h12.082a.211.211 0 0 1 .206.205v9.848h-.002z"}
          = "ブランドから探す"
          = render partial:"layouts/brand"
      %ul.header__center__down__user_menu
        %li.header__center__down__user_menu__likes{style: "list-style:none"}
          %svg{width: "18", height: "44" ,viewBox: "0 0 16 15", class: "header__center__down__user_menu__likes__icon"}
            %path{fill: "currentColor" ,d: "M8.08 12.711l-.08.082-.08-.082C4.112 9.188 1.6 6.858 1.6 4.496c0-1.635 1.2-2.861 2.8-2.861 1.232 0 2.432.81 2.856 1.929h1.496c.416-1.12 1.616-1.93 2.848-1.93 1.6 0 2.8 1.227 2.8 2.862 0 2.362-2.512 4.692-6.32 8.215M11.6 0C10.208 0 8.872.662 8 1.708 7.128.662 5.792 0 4.4 0 1.936 0 0 1.978 0 4.496c0 3.09 2.72 5.608 6.84 9.433L8 15l1.16-1.079C13.28 10.104 16 7.586 16 4.496 16 1.978 14.064 0 11.6 0" }
            %h1.header__center__down__user_menu__likes__word
              = "いいね！一覧"
        %li.header__center__down__user_menu__notify{style: "list-style:none"}
          %svg{width: "18" ,height: "44" ,viewBox: "0 0 14 16", class: "header__center__down__user_menu__notify__icon"}
            %path{fill: "currentColor" ,d: "M6.592 16c.89 0 1.632-.734 1.632-1.632H4.928c0 .898.742 1.632 1.664 1.632zm4.896-4.928V6.976c-.008-2.521-1.345-4.63-3.712-5.184v-.576C7.79.55 7.241 0 6.56 0c-.68 0-1.23.55-1.216 1.216v.576c-2.36.554-3.704 2.654-3.712 5.184v4.096L0 12.704v.832h13.12v-.832l-1.632-1.632zm-1.632.832h-6.56V6.976c0-2.024 1.238-3.68 3.296-3.68 2.026 0 3.264 1.656 3.264 3.68v4.928z"}
          %h1.header__center__down__user_menu__norify__word
            = "お知らせ"
        %li.header__center__down__user_menu__todo{style: "list-style:none"}
          %svg{width: "18" ,height: "44" ,viewBox: "0 0 21 16" ,class: "header__center__down__user_menu__todo__icon"}
            %path{fill: "currentColor" ,d: "M6.682 12.657L1.67 7.642 0 9.313 6.682 16 21 1.672 19.33 0z"}
          %h1.header__center__down__user_menu__todo__word
            = "やることリスト"
        %li.header__center__down__user_menu__mypage{style: "list-style:none"}
          %h1.header__center__down__user_menu__mypage__word
            - if user_signed_in?
              %svg{height: "40" ,width: "30"}
                %circle{cx: "15" ,cy: "22" ,r: "10" ,stroke: "black" ,fill: "#2bcbd1"}
              = link_to "マイページ", "/users/#{current_user.id}"
            - else
              = link_to "新規登録", new_user_registration_path
              = link_to "ログイン", new_user_session_path