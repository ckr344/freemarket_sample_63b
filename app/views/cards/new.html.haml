.card-new
  .card-new__head
  .card-new__content
    .card-new__title
      クレジットカード情報入力
    .card-new__form
      = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .card-new__form-group--num
          .card-new__form-text
            .card-new__form-title
              %label カード番号
            .card-new__form-required
              必須
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          .card-new__form-brand
            = image_tag "logo/card-brand-logo.png", class: 'card-new__form-brand--img', alt:"ロゴ"
        %br
        .card-new__form-group--deadline
          .card-new__form-text
            .card-new__form-title
              %label 有効期限
            .card-new__form-required
              必須
          %select#exp_month{name: "exp_month", type: "text"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span.card-new__form-deadline-day 月
          %select#exp_year{name: "exp_year", type: "text"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span.card-new__form-deadline-day 年
        %br
        .card-new__form-group--cvc
          .card-new__form-text
            .card-new__form-title
              %label セキュリティコード
            .card-new__form-required
              必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        #card_token
        .card-new__btn-box
          = submit_tag "追加する", id: "token_submit"
  .card-new__foot